{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": ["**/*.html"],
    "plugins": [  {
    "name": "@nestjs/swagger",
    "options": {
      "classValidatorShim": true,
      "dtoFileNameSuffix":[
        ".dto.ts",
        ".response.ts",
        ".entity.ts"
      ]
    }
  }]
  }
}
