{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src", // Change this to the "src" directory
    "paths": {
      "*": ["*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
